conky.config = {
background = false,
out_to_console = true,
out_to_x = false,
update_interval = 1
}

conky.text = [[
V:${exec ~/.local/scripts/getvolume |awk '{print $1 "/" $2}'} // \
B:${exec acpi |awk '{print $4}'} // \
${exec ~/.local/scripts/getkbdlayout} // \
^bg(\#528588) ${time %d/%m/%y  %H:%M}  ^bg()\
]]
